<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardElevation="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="5dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/White">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead Name"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"/>

            <TextView

                android:id="@+id/leadgenname"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead Contact"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"/>

            <TextView

                android:id="@+id/leadgencontact"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead Address"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"/>

            <TextView

                android:id="@+id/leadgenaddress"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profit"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"
                />

            <TextView

                android:id="@+id/leadgenprofit"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Sold"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"/>

            <TextView

                android:id="@+id/leadgensold"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Left"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"
                />

            <TextView

                android:id="@+id/leadgenleft"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Stocks"
                android:textColor="@color/Black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="19sp"
                />

            <TextView

                android:id="@+id/leadgenstocks"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NA"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"

                />

        </LinearLayout>



    </androidx.cardview.widget.CardView>


</LinearLayout>